#: import FieldsContainer uic.workspace

<CreateTableTab>:
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'horizontal'
            height: self.minimum_height
            size_hint_y: None
            padding: dp(20)
            spacing: dp(10)
            MDRectangleFlatButton:
                text: 'Сохранить'
            MDRectangleFlatButton:
                text: 'Добавить поле'
                on_press: root._add_new_field()
        MDScrollView:
            do_scroll_y: True
            MDGridLayout:
                id: field_container
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                padding: dp(10)

<FieldsContainer>:
    cols: 3
    rows: 2
    size_hint_y: None
    height: self.minimum_height
    spacing: dp(5)
    MDDropDownItem:
        id: dropdownitem
        col: 1
        row: 1
        text: ' Тип данных '
        on_press: root.choice_datetype.open()
    MDTextField:
        col: 2
        row: 1
        mode: 'rectangle'
        hint_text: 'Кодовое имя'
    MDTextField:
        col: 3
        row: 1
        mode: 'rectangle'
        hint_text: 'UI имя'
    MDTextField:
        col: 1
        row: 1
        mode: 'rectangle'
        hint_text: 'Подсказка для ассистента'